<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="2px"
                android:left="1px"
                android:right="1px"
                android:top="1px" />
            <corners android:radius="2dp" />
            <solid android:color="#e7e7e7" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>


