<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/ivBigImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@null"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:lines="2"
        android:maxWidth="200dp"
        android:textColor="#fff"
        android:textSize="16sp"
        tools:text="sdfsafadsfdasdfsdfdsfsdfsdfsdfsdffdssfsaf" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="#18b549"
        android:gravity="center"
        android:text="Download"
        android:textColor="#fff"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/tvSubTitle"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@id/ivIcon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ivIcon"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxWidth="150dp"
        android:textColor="#fff"
        android:textSize="16sp"
        tools:text="sdfsafadsfdasfsaf" />

    <ImageView
        android:id="@+id/native_privacy_information_icon_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/native_privacy_information_icon_image"
        android:padding="10dp" />

</RelativeLayout>
