<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efefef">

    <RelativeLayout
        android:id="@+id/rlRoot"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/news_item_bg">

        <RelativeLayout
            android:id="@+id/rlIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/rlIcon"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="150dp"
            android:textColor="#333"
            android:textSize="16sp"
            tools:text="sdfsafadsfdddddddddddddddddddddddddddddddddddddddddasfsaf" />

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/rlIcon"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="150dp"
            android:textColor="#b3333333"
            android:textSize="14sp"
            tools:text="sdfsafadsfdasdfsdfdsfsdfsdfsdfsdffdssfsaf" />

        <TextView
            android:id="@+id/tvDownLoad"
            android:layout_width="96dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ad_item_download_bg"
            android:gravity="center"
            android:text="@string/download"
            android:textColor="#fff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivPrivacyImage"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ad_label_g_46" />
    </RelativeLayout>


</RelativeLayout>



















