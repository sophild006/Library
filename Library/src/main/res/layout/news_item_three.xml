<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#eaeaea">

    <RelativeLayout
        android:id="@+id/rlRoot"
        android:background="#fff"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="15sp"
            tools:text="sdfdddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddsfs" />

        <ImageView
            android:id="@+id/ivImage1"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_below="@id/tvTitle"
            android:scaleType="fitXY"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="10dp" />
        <RelativeLayout
            android:id="@+id/rlTip1"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/news_ico_b_72"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivImage2"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_toRightOf="@id/ivImage1" />

        <RelativeLayout
            android:id="@+id/rlTip2"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ivImage1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/news_ico_b_72"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivImage3"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_below="@id/tvTitle"
            android:scaleType="fitXY"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ivImage2" />

        <RelativeLayout
            android:id="@+id/rlTip3"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ivImage2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/news_ico_b_72"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImage1"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="7dp">

            <TextView
                android:id="@+id/tvSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="india.com"
                android:textSize="13sp"
                android:textColor="#9f9f9f"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tvRecom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="13sp"
                android:textColor="#9f9f9f"/>

            <ImageView
                android:id="@+id/ivRecomHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_ico_28_l"
                android:layout_toLeftOf="@id/tvRecom"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>














