<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/rlImageContain"
        android:layout_width="match_parent"
        android:layout_height="154dp">
        <ImageView
            android:id="@+id/ivBigImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#8cffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="AD"/>

        <ImageView
            android:id="@+id/ivSmallIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="13sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/rlImageContain"
        android:lines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8c333333"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tvTitle"
        android:lines="1"
        tools:text="sdfsdfsdfsdfdsfsdfsfsdfdsf"
        android:maxWidth="200dp"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4cbf99"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_alignTop="@id/tvSubTitle" />
</RelativeLayout>